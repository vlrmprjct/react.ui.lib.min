{
    "name": "@vlrm/library",
    "version": "1.0.0",
    "description": "React TypeScript UI Library NPM Package Minimal Setup",
    "author": "Thmomas Meschke @vlrmprjct",
    "private": false,
    "license": "ISC",
    "keywords": [
        "storybook",
        "react",
        "reactjs",
        "typescript",
        "ui-components",
        "library",
        "npm",
        "npm-package"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "!*.stories.*"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/vlrmprjct/react.ui.lib.min.git"
    },
    "bugs": {
        "url": "https://github.com/vlrmprjct/react.ui.lib.min/issues",
        "email": "mail@lokalnetz.com"
    },
    "scripts": {
        "build": "rm -rf dist && rm -rf *.tgz && webpack --config config/webpack.config.js",
        "build-storybook": "build-storybook -c .storybook -o storybook-static",
        "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
        "storybook": "start-storybook -p 9001 -c .storybook"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.21.4",
        "@babel/preset-react": "^7.18.6",
        "@types/react": "^18.0.35",
        "@types/react-dom": "^18.0.11",
        "@typescript-eslint/eslint-plugin": "^5.58.0",
        "@typescript-eslint/parser": "^5.58.0",
        "babel-jest": "^29.5.0",
        "babel-loader": "^9.1.2",
        "cross-env": "^7.0.3",
        "css-loader": "^6.7.3",
        "jest": "^29.5.0",
        "node-sass": "^8.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-test-renderer": "^18.2.0",
        "sass-loader": "^13.2.2",
        "style-loader": "^3.3.2",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.2",
        "typescript": "^5.0.4",
        "webpack": "^5.79.0",
        "webpack-cli": "^5.0.1"
    },
    "babel": {
        "configFile": "./config/babel.config.js"
    }
}
